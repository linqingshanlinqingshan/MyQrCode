<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_qrcode_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_qr"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:layout_centerInParent="true"
            android:background="@color/back_gray"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qr"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/qrcode_failure_background_corners_round"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="将二维码放入框内，即可自动扫描"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </RelativeLayout>

    <include layout="@layout/common_bottom_bar" />

</LinearLayout>